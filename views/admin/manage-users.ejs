<% layout("layout") -%>

  <div class="container">
  <% include ../partials/adminpanel %>
  
    <div class="panel panel-info" id="myScrollspy" style="padding: 10px; margin-top: 50px;">
      <div class="table-responsive">
        <div style="overflow-y: scroll; height:350px; ">
          <table class="table table-striped">
            <thead>
              <tr>
                <th style="color: #ffffff; background-color: #020531;">Name</th>
                <th style="color: #ffffff; background-color: #020531;">Status</th>
                <th style="color: #ffffff; background-color: #020531;">Date Submitted</th>
                <th style="color: #ffffff; background-color: #020531;">Manage Account</th>
              </tr>
            </thead>
            <tbody>
              <% allPending.forEach(function(pending){ %>

                <tr>
                  <td>
                    <%=pending.lastName %>,
                      <%= pending.firstName %>
                        <%= pending.middleName %>
                  </td>
                  <td>
                    <%= pending.status %>
                  </td>
                  <td>
                    <%= moment(pending.date).format('LL')%>

                  </td>
                  <td>
                    <a class="btn btn-info btn-sm" href="/manage/<%= pending._id %>">Accept</a>
                    <form id="delete-form" action="/manage/<%= pending._id %>?_method=DELETE" method="POST">
                    <!-- Trigger the modal with a button -->
				<button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">DELETE</button>

				<!-- Modal -->
				<div id="myModal" class="modal fade" role="dialog">
				  <div class="modal-dialog">

				    <!-- Modal content-->
				    <div class="modal-content">
				      <div class="modal-header">
				        <button type="button" class="close" data-dismiss="modal">&times;</button>
				        <h4 class="modal-title">Delete the pending user</h4>
				      </div>
				      <div class="modal-body">
				        <p>Are you sure you want to delete this?</p>
				      </div>
				      <div class="modal-footer">
				      <button class="btn btn-default">YES</button>
				        <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
			</div>
                    </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>