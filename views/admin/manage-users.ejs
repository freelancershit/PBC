<% layout("layout") -%>

  <div class="container">
    <div class="panel panel-info" id="myScrollspy" style="padding: 10px; margin-top: 50px;">
      <div class="table-responsive">
        <div style="overflow-y: scroll; height:350px; ">
          <table class="table table-striped">
            <thead>
              <tr>
                <th style="color: #ffffff; background-color: #020531;">Name</th>
                <th style="color: #ffffff; background-color: #020531;">Status</th>
                <th style="color: #ffffff; background-color: #020531;">Date Submitted</th>
                <th style="color: #ffffff; background-color: #020531;">Manage Account</th>
              </tr>
            </thead>
            <tbody>
              <% allPending.forEach(function(pending){ %>

                <tr>
                  <td>
                    <%=pending.lastName %>,
                      <%= pending.firstName %>
                        <%= pending.middleName %>
                  </td>
                  <td>
                    <%= pending.status %>
                  </td>
                  <td>
                    <%= moment(pending.date).format('LL')%>

                  </td>
                  <td>
                    <a class="btn btn-info btn-sm" href="/manage/<%= pending._id %>">Accept</a>
                    <a class="btn btn-info btn-sm" href="/manage/<%= pending._id %>">Delete</a>
                  </td>
                </tr>
                <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>