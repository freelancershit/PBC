<% layout("layout") -%>
  <div class="col-sm-3" style=" padding: 10px; margin-top: 50px;" overflow-x: hidden;>
    <div class="col-lg-12">
      <% include ../partials/adminpanel %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="container">
      <div class="panel panel-info col-sm-9" id="myScrollspy" style="padding: 0px; margin-top: 80px; min-height:500px;">

        <div class="panel-heading" style="color: #ffffff;">

          Manage Publication

        </div>
        <label for="usr" style="margin-left: 5px; margin-top: 15px;">Category:</label>
        <div class="container">
          <div class="dropdown" style="margin-top:5px; margin-left: -10px;">
            <button style="border-radius: 5px;" class="dropdown-toggle" type="button" data-toggle="dropdown">--Please Select--
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li>
                <a href="#">1</a>
              </li>
              <li>
                <a href="#">2</a>
              </li>
              <li>
                <a href="#">3</a>
              </li>
            </ul>
          </div>
        </div>

        <br>
        <div class="table-responsive">
          <div style="overflow-y: scroll; height:350px; ">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th style="color: #ffffff; background-color: #020531;">Post #</th>
                  <th style="color: #ffffff; background-color: #020531;">Category</th>
                  <th style="color: #ffffff; background-color: #020531;">Title</th>
                  <th style="color: #ffffff; background-color: #020531;">Action</th>
                  <th style="color: #ffffff; background-color: #020531;">Date Submitted</th>
                </tr>
              </thead>
              <tbody>
              <% if(literaries){ %>
                <% literaries.forEach(function(news){ %>
                  <tr>
                    <td>
                      <%= news.postNumber %>
                    </td>
                    <td>
                      <%= news.category %>
                    </td>
                    <td>
                      <%= news.title %>
                    </td>
                    <td>
                    <% if(!news.status){ %>
                    <form action="/managepubs/<%= news._id %>" method="POST">
                    <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal5">
                          <i class="fa fa-check" aria-hidden="true"></i>
                        </button>
                     <!-- Modal -->
                     <div id="myModal5" class="modal fade" role="dialog">
                     <div class="modal-dialog">

                       <!-- Modal content-->
                       <div class="modal-content">
                         <div class="modal-header">
                           <button type="button" class="close" data-dismiss="modal">&times;</button>
                           <h4 class="modal-title">Post Publication</h4>
                         </div>
                         <div class="modal-body">
                           <p>Are you sure you want to post this?</p>
                         </div>
                         <div class="modal-footer">
                           <button class="btn btn-default">YES</button>
                           <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
                         </div>
                       </div>
                     </div>
                   </div>
                    </form>
                    <% } %>
                      <form id="delete-form" action="/managepubs/<%= news._id %>?_method=DELETE" method="POST">
                        <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">
                          <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </button>

                        <!-- Modal -->
                        <div id="myModal" class="modal fade" role="dialog">
                          <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Delete the Post</h4>
                              </div>
                              <div class="modal-body">
                                <p>Are you sure you want to delete this?</p>
                              </div>
                              <div class="modal-footer">
                                <button class="btn btn-default">YES</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">NO</button>
                              </div>
                            </div>
                          </div>
                        </div>
                      </form>
                      <form id="delete-form" action="/managepubs/<%= news._id %>/edit" method="POST">
                        <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#editModal">
                          <i class="fa fa-edit" aria-hidden="true"></i>
                        </button>
                        <!-- Modal -->
                        <div id="editModal" class="modal fade" role="dialog">
                          <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                              <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Edit News and Announcement</h4>
                              </div>
                              <div class="modal-body">
                                <div class="form-group">
                                  <label for="usr" style="color:black;">Category:</label>
                                  <select name="category" class="btn btn-info" id="usr">
                                    <option selected value="<%= news.category %>">
                                      <%= news.category %>
                                    </option>
                                    <option value="news">News</option>
                                    <option value="announcenment">Announcement</option>
                                  </select>
                                </div>
                                <div class="form-group">
                                  <label for="usr">Title:</label>
                                  <input value="<%= news.title %>" name="title" type="text" class="form-control" id="usr">
                                </div>
                                <div class="form-group">
                                  <label for="comment">Content:</label>
                                  <textarea value="<%= news.content %>" name="content" class="form-control" rows="5" id="comment"><%= news.content %></textarea>
                                </div>
                              </div>
                              <div class="modal-footer">
                                <button class="btn btn-default">UPDATE</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">CLOSE</button>
                              </div>
                            </div>
                          </div>
                        </div>
                      </form>
                    </td>
                    <%= moment(news.publishDate).format("LL") %>
                  </tr>
                  <% }); %>
                  <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- //modal -->
  </div>