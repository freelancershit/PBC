<% layout("layout") -%>
  <header id="myCarousel" class="carousel slide">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <div class="fill" style="background-image:url('/images/h1.jpg');"></div>
        <div class="carousel-caption">
        </div>
      </div>
      <div class="item">
        <div class="fill" style="background-image:url('/images/h2.jpg');"></div>
        <div class="carousel-caption">
        </div>
      </div>
      <div class="item">
        <div class="fill" style="background-image:url('/images/h3.jpg');"></div>
        <div class="carousel-caption">
        </div>
      </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="icon-prev"></span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="icon-next"></span>
    </a>
  </header>

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          SCHOLARSHIPS
        </h1>
        <br>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="col-lg-12">
      <div class="panel panel-info">
        <div class="panel-heading" style="text-align:center;">
          <h4>
            <a> A. Academic Scholarships </a>
          </h4>
        </div>
        <div class="panel-body">
          <ul>
            <li>PBCSSI prepatory and grade 6 scholars shall enjoy the following when they enroll for grade 1 or grade 7</li>
            <ul>
              <li>Valedictorian / Rank 1 - 100% discount on tuition fees</li>
              <li>Salutatorian / Rank 2 - 50% discount on tuition fees</li>
              <li>1st Honorable Mention / Rank 3 - 25% discount on tuition fees</li>
            </ul>
          </ul>

        </div>

      </div>
    </div>
    <div class="col-lg-12">
      <div class="panel panel-info">
        <div class="panel-heading" style="text-align:center;">
          <h4>
            <a> B. ESC Grant </a>
          </h4>
        </div>
        <div class="panel-body" align="center">
          <p>Continuous financial aid for grade 7 - grade 10 students amounting to Php 8,500 and is automatically deducted from
            their tuition fees.</p>
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="panel panel-info">
        <div class="panel-heading" style="text-align:center;">
          <h4>
            <a>C. Patronage Discounts </a>
          </h4>
        </div>
        <div class="panel-body">
          <ul>
            <li>For every 3 enrollees from the same family, the youngest one gets 50% discount on tuition fees.</li>
            <li>For every 5 or more enrollees from the same family, the youngest one gets full discount on tuition fees.</li>
            <li>Daughters and sons of teachers also get 25% discount on tuition fees.</li>
          </ul>
        </div>
      </div>
    </div>
  </div>